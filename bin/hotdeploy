#!/bin/bash

# Just save myself some time 

echo "Cleaning..."
./site clean > /dev/null

echo "Rebuilding"
./site rebuild > /dev/null

endpoint=cdagostino.io:/var/www/cdagostino.io

\scp -r _site/* $endpoint 1> /dev/null
if [ $? -eq 0 ]; then
  echo "Deployed! Visit http://cdagostino.io"
else
  echo "Yo.. what?"
fi
